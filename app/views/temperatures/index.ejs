<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.temperatures() %>">temperatures</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of temperature</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New temperature', pathTo.new_temperature(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (temperatures.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <% temperatures.forEach(function (temperature) { %>
                <tr>
                    <td><strong><%- link_to('temperature #' + temperature.id, pathTo.temperature(temperature)) %></strong></td>
                    <td><%- temperature.value %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No temperatures were found.</strong>
        </p>
        <% } %>
    </div>
</div>
